<UserControl
    x:Class="BF1MarneTools.Views.LaunchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="clr-namespace:BF1MarneTools"
    xmlns:ui="http://wpf.microsoft.com/ui/2026/xaml"
    xmlns:views="clr-namespace:BF1MarneTools.Views"
    d:DesignHeight="160"
    d:DesignWidth="850"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  分区一  -->
        <ui:CardMenu
            Title="Frosty Mod Manager"
            Grid.Column="0"
            Margin="5,5,5,0"
            Description="用于安装寒霜Mod和启动战地1工具，支持多个Mod安装，支持拖拽排序，一键安装Mod无需其它繁琐操作"
            Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/FrostyModManager.png">
            <ui:CardMenu.CardContent>
                <WrapPanel HorizontalAlignment="Right">
                    <ToggleButton
                        Margin="5,5,5,0"
                        Content="启用MOD"
                        IsChecked="{Binding Path=(root:Globals.IsUseMod)}" />
                    <!--  //////  -->
                    <ui:IconButton
                        Margin="5,5,0,0"
                        Command="{Binding RunFrostyModManagerCommand}"
                        Content="启动"
                        Icon="&#xE768;" />
                    <ui:IconButton
                        Margin="5,5,0,0"
                        Command="{Binding CloseFrostyModManagerCommand}"
                        Content="关闭"
                        Icon="&#xF78A;" />
                </WrapPanel>
            </ui:CardMenu.CardContent>
        </ui:CardMenu>

        <!--  分区二  -->
        <ui:CardMenu
            Title="Marne Launcher"
            Grid.Column="1"
            Margin="0,5,0,0"
            Description="用于启动本地战地1服务器或加入其它公共服务器，支持Mod联机，支持局域网联机"
            Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/MarneLauncher.png">
            <ui:CardMenu.CardContent>
                <WrapPanel HorizontalAlignment="Right">
                    <ui:IconButton
                        Margin="5,5,0,0"
                        Command="{Binding RunMarneLauncherCommand}"
                        Content="启动"
                        Icon="&#xE768;" />
                    <ui:IconButton
                        Margin="5,5,0,0"
                        Command="{Binding CloseMarneLauncherCommand}"
                        Content="关闭"
                        Icon="&#xF78A;" />
                </WrapPanel>
            </ui:CardMenu.CardContent>
        </ui:CardMenu>

        <!--  分区三  -->
        <views:NameView Grid.Column="2" Margin="5,5,5,0" />

    </Grid>

</UserControl>