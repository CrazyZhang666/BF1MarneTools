<UserControl
    x:Class="BF1MarneTools.Views.NameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:BF1MarneTools.Resources"
    xmlns:root="clr-namespace:BF1MarneTools"
    xmlns:ui="http://wpf.microsoft.com/ui/2025/xaml"
    d:DesignHeight="160"
    d:DesignWidth="266"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d">

    <Border
        Height="130"
        Padding="7"
        Background="#FFFFFF"
        BorderBrush="#BBBBBB"
        BorderThickness="1"
        CornerRadius="3">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" VerticalAlignment="Center">
                <!--  超链接  -->
                <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Bottom">
                    <ui:IconHyperlink
                        Margin="5"
                        Text="{x:Static res:Lang.NameView_Website}"
                        ToolTip="https://battlefield.vip"
                        Uri="https://battlefield.vip" />
                    <ui:IconHyperlink
                        Margin="5"
                        Text="Marne"
                        ToolTip="https://marne.io"
                        Uri="https://marne.io" />
                    <ui:IconHyperlink
                        Margin="5"
                        Text="Discord"
                        ToolTip="https://marne.io/discord"
                        Uri="https://marne.io/discord" />
                    <ui:IconHyperlink
                        Margin="5"
                        Text="GitHub"
                        ToolTip="https://github.com/CrazyZhang666/BF1MarneTools"
                        Uri="https://github.com/CrazyZhang666/BF1MarneTools" />
                </WrapPanel>
                <!--  战地1图片  -->
                <ui:Image
                    Margin="10,0,10,0"
                    HorizontalAlignment="Center"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/BF1Logo.png"
                    Stretch="Uniform" />
            </DockPanel>

            <!--  自定义玩家名称  -->
            <!--  仅非服务器模式下显示  -->
            <DockPanel
                Grid.Row="1"
                d:Visibility="Visible"
                Visibility="{Binding Path=(root:Globals.IsUseServer), Converter={StaticResource EnabledToVisibility2Converter}}">
                <ui:IconButton
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Command="{Binding ChangePlayerNameCommand}"
                    DockPanel.Dock="Right"
                    Icon="&#xE70F;"
                    IconSize="16"
                    IsEnabled="{Binding ElementName=TextBox_PlayerName, Path=Text, Converter={StaticResource IsNullOrWhiteSpace2Converter}}"
                    ToolTip="{x:Static res:Lang.NameView_ChangePlayerName}" />
                <ui:TextBoxHint
                    x:Name="TextBox_PlayerName"
                    Margin="0"
                    Hint="{x:Static res:Lang.NameView_PlayerNameHint}"
                    Icon="&#xE13D;" />
            </DockPanel>
        </Grid>
    </Border>

</UserControl>