<ui:EdgeWindow
    x:Class="BF1MarneTools.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ntf="clr-namespace:Notification.Wpf.Controls;assembly=Notification.Wpf"
    xmlns:res="clr-namespace:BF1MarneTools.Resources"
    xmlns:root="clr-namespace:BF1MarneTools"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:ui="http://wpf.microsoft.com/ui/2025/xaml"
    xmlns:views="clr-namespace:BF1MarneTools.Views"
    x:Name="Window_Main"
    Title="{x:Static res:Lang.WindowTitle}"
    Width="850"
    Height="550"
    MinWidth="850"
    MinHeight="550"
    Closing="Window_Main_Closing"
    ContentRendered="Window_Main_ContentRendered"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Icon="{StaticResource DefaultIconPath}"
    Loaded="Window_Main_Loaded"
    ResizeMode="CanMinimize"
    Style="{StaticResource CustomEdgeWindowStyle}"
    mc:Ignorable="d">

    <ui:EdgeWindow.CaptionContent>
        <DockPanel>
            <StackPanel Orientation="Horizontal">
                <ui:Image
                    Width="18"
                    Height="18"
                    Margin="7,0,0,0"
                    Source="{Binding Icon}" />
                <TextBlock
                    Margin="7,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding Title}" />
                <!--  //////  -->
                <ui:IconHyperlink
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Icon="&#xE896;"
                    Text="{x:Static res:Lang.MainWin_DownloadUpdate}"
                    ToolTip="https://github.com/CrazyZhang666/BF1MarneTools/releases"
                    Uri="https://github.com/CrazyZhang666/BF1MarneTools/releases"
                    Visibility="{Binding MainModel.IsNeedUpdate, Converter={StaticResource EnabledToVisibilityConverter}}"
                    WindowChrome.IsHitTestVisibleInChrome="True" />
            </StackPanel>
            <!--  //////////  -->
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                DockPanel.Dock="Right"
                Orientation="Horizontal"
                WindowChrome.IsHitTestVisibleInChrome="True">
                <ui:WinButton
                    Command="{Binding SetLaunchAccountCommand}"
                    FontSize="14"
                    Icon="&#xE8D7;"
                    Style="{StaticResource WinButtonStyle_Normal}"
                    ToolTip="{x:Static res:Lang.MainWin_SetLaunchAccount}" />
                <ui:WinButton
                    Command="{Binding SetGameLocaleCommand}"
                    FontSize="14"
                    Icon="&#xF2B7;"
                    Style="{StaticResource WinButtonStyle_Normal}"
                    ToolTip="{x:Static res:Lang.MainWin_SetGameLanguage}" />
                <Border
                    Width="1"
                    Margin="7"
                    Background="Gray" />
                <!--  //////  -->
                <ui:WinButton
                    Command="{Binding OpenMarneFolderCommand}"
                    FontSize="14"
                    Icon="&#xED43;"
                    Style="{StaticResource WinButtonStyle_Normal}"
                    ToolTip="{x:Static res:Lang.MainWin_OpenMarneFolder}" />
                <ui:WinButton
                    Command="{Binding OpenCrashFolderCommand}"
                    FontSize="14"
                    Icon="&#xEBE8;"
                    Style="{StaticResource WinButtonStyle_Normal}"
                    ToolTip="{x:Static res:Lang.MainWin_OpenCrashFolder}" />
                <Border
                    Width="1"
                    Margin="7"
                    Background="Gray" />
                <!--  //////  -->
                <ui:WinButton
                    Command="{Binding OpenBF1FolderCommand}"
                    FontSize="14"
                    Icon="&#xED25;"
                    Style="{StaticResource WinButtonStyle_Normal}"
                    ToolTip="{x:Static res:Lang.MainWin_OpenBF1Folder}" />
                <ui:WinButton
                    Command="{Binding OpenConfigFolderCommand}"
                    FontSize="14"
                    Icon="&#xE713;"
                    Style="{StaticResource WinButtonStyle_Normal}"
                    ToolTip="{x:Static res:Lang.MainWin_OpenConfigFolder}" />
                <Border
                    Width="1"
                    Margin="7"
                    Background="Gray" />
            </StackPanel>
        </DockPanel>
    </ui:EdgeWindow.CaptionContent>

    <ui:EdgeWindow.Resources>
        <ContextMenu x:Key="ContextMenu_Notify">
            <MenuItem
                Command="{Binding ShowWindowCommand}"
                Header="{x:Static res:Lang.MainWin_ShowWindow}"
                Icon="&#xE737;" />
            <Separator />
            <MenuItem
                Command="{Binding ExitAppCommand}"
                Header="{x:Static res:Lang.MainWin_ExitApp}"
                Icon="&#xE711;" />
        </ContextMenu>
    </ui:EdgeWindow.Resources>

    <Grid>
        <!--  托盘菜单  -->
        <tb:TaskbarIcon
            x:Name="NotifyIcon_Main"
            ContextMenu="{StaticResource ContextMenu_Notify}"
            IconSource="{StaticResource DefaultIconPath}"
            LeftClickCommand="{Binding ShowWindowCommand}"
            MenuActivation="RightClick"
            NoLeftClickDelay="True"
            PopupActivation="DoubleClick"
            ToolTipText="{x:Static res:Lang.WindowTitle}" />

        <!--  主区域  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  主要功能区  -->
            <views:LaunchView Grid.Row="0" />

            <!--  工具区域  -->
            <views:ToolsView Grid.Row="1" />

            <!--  程序日志区域  -->
            <views:LogView Grid.Row="2" />

        </Grid>

        <!--  通知区域  -->
        <ntf:NotificationArea
            x:Name="MainWindowArea"
            d:Visibility="Collapsed"
            MaxItems="3"
            Position="BottomCenter" />

    </Grid>

</ui:EdgeWindow>