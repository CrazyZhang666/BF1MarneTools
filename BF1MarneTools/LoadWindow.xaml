<ui:EdgeWindow
    x:Class="BF1MarneTools.LoadWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:BF1MarneTools.Resources"
    xmlns:root="clr-namespace:BF1MarneTools"
    xmlns:ui="http://wpf.microsoft.com/ui/2025/xaml"
    x:Name="Window_Load"
    Title="{x:Static res:Lang.WindowTitle}"
    Width="550"
    Height="370"
    MinWidth="550"
    MinHeight="370"
    Closing="Window_Load_Closing"
    ContentRendered="Window_Load_ContentRendered"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Icon="{StaticResource DefaultIconPath}"
    Loaded="Window_Load_Loaded"
    ResizeMode="NoResize"
    Style="{StaticResource CustomEdgeWindowStyle}"
    mc:Ignorable="d">

    <ui:EdgeWindow.CaptionContent>
        <DockPanel>
            <StackPanel Orientation="Horizontal">
                <ui:Image
                    Width="18"
                    Height="18"
                    Margin="7,0,0,0"
                    Source="{Binding Icon}" />
                <TextBlock
                    Margin="7,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding Title}" />
            </StackPanel>
            <!--  ////////////////  -->
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                WindowChrome.IsHitTestVisibleInChrome="True">
                <ui:IconHyperlink
                    Margin="0,0,7,0"
                    Text="GitHub"
                    ToolTip="https://github.com/CrazyZhang666/BF1MarneTools"
                    Uri="https://github.com/CrazyZhang666/BF1MarneTools" />
                <ui:WinButton
                    Command="{Binding OpenConfigFolderCommand}"
                    Icon="&#xE713;"
                    Style="{StaticResource WinButtonStyle_Normal}"
                    ToolTip="{x:Static res:Lang.LoadWin_OpenConfigFolder}" />
                <!--  ////////  -->
                <Border
                    Width="1"
                    Margin="7"
                    Background="Gray" />
            </StackPanel>
        </DockPanel>
    </ui:EdgeWindow.CaptionContent>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <ui:IconHeader Title="{x:Static res:Lang.LoadWin_BF1InstallPath}" />
            <DockPanel>
                <ui:IconButton
                    Margin="0,5,5,5"
                    VerticalAlignment="Center"
                    Command="{Binding SelcetBf1PathCommand}"
                    DockPanel.Dock="Right"
                    Icon="&#xE71E;"
                    IconSize="16"
                    ToolTip="{x:Static res:Lang.LoadWin_SelectPath}" />
                <ui:TextBoxHint
                    Hint="{x:Static res:Lang.LoadWin_SelectBF1InstallPath}"
                    Icon="&#xED25;"
                    IsReadOnly="True"
                    Text="{Binding LoadModel.Bf1Path}" />
            </DockPanel>
        </StackPanel>

        <UniformGrid Grid.Row="1" Columns="2">
            <StackPanel>
                <ui:IconHeader
                    Title="{x:Static res:Lang.LoadWin_WorkMode}"
                    Margin="5"
                    VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal">
                    <RadioButton
                        d:IsChecked="True"
                        Content="{x:Static res:Lang.LoadWin_ClientMode}"
                        GroupName="WorkMode"
                        IsChecked="{Binding Path=(root:Globals.IsUseServer), Converter={StaticResource InverseBooleanConverter}}" />
                    <RadioButton
                        Content="{x:Static res:Lang.LoadWin_ServerMode}"
                        GroupName="WorkMode"
                        IsChecked="{Binding Path=(root:Globals.IsUseServer)}" />
                </StackPanel>
            </StackPanel>
            <!--  ////////////////  -->
            <StackPanel>
                <ui:IconHeader
                    Title="{x:Static res:Lang.LoadWin_DisplayLanguage}"
                    Margin="5"
                    VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal">
                    <RadioButton
                        x:Name="RadioButton_Lang_zhCN"
                        d:IsChecked="True"
                        Command="{Binding SwitchLanguageCommand}"
                        CommandParameter="zh-CN"
                        Content="简体中文"
                        GroupName="Language" />
                    <RadioButton
                        x:Name="RadioButton_Lang_enUS"
                        Command="{Binding SwitchLanguageCommand}"
                        CommandParameter="en-US"
                        Content="English"
                        GroupName="Language" />
                </StackPanel>
            </StackPanel>
        </UniformGrid>

        <TextBox
            x:Name="TextBox_Logger"
            Grid.Row="2"
            Margin="5,5,5,0"
            d:Text="等待玩家操作中..."
            Style="{StaticResource TextBoxStyle_Logger}" />

        <ui:IconButton
            Grid.Row="3"
            Padding="10"
            Command="{Binding LaunchMainAppCommand}"
            Content="{x:Static res:Lang.LoadWin_RunMainApp}"
            Icon="&#xF0D6;">
            <ui:IconButton.Style>
                <Style BasedOn="{StaticResource IconButtonStyle_Base}" TargetType="{x:Type ui:IconButton}">
                    <Setter Property="IsEnabled" Value="False" />
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding LoadModel.IsInitSuccess}" Value="True" />
                                <Condition Binding="{Binding LoadModel.Bf1Path, Converter={StaticResource IsNullOrWhiteSpaceConverter}}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.Setters>
                                <Setter Property="IsEnabled" Value="True" />
                            </MultiDataTrigger.Setters>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </ui:IconButton.Style>
        </ui:IconButton>
    </Grid>

</ui:EdgeWindow>