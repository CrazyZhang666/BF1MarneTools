<ui:EdgeWindow
    x:Class="BF1MarneTools.LoadWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="clr-namespace:BF1MarneTools"
    xmlns:ui="http://wpf.microsoft.com/ui/2026/xaml"
    x:Name="Window_Load"
    Title="战地1马恩工具箱"
    Width="550"
    Height="350"
    MinWidth="550"
    MinHeight="350"
    Closing="Window_Load_Closing"
    ContentRendered="Window_Load_ContentRendered"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Icon="{StaticResource DefaultIconPath}"
    Loaded="Window_Load_Loaded"
    ResizeMode="NoResize"
    Style="{StaticResource CustomEdgeWindowStyle}"
    mc:Ignorable="d">

    <ui:EdgeWindow.CaptionContent>
        <DockPanel>
            <StackPanel Orientation="Horizontal">
                <ui:Image
                    Width="18"
                    Height="18"
                    Margin="7,0,0,0"
                    Source="{Binding Icon}" />
                <TextBlock
                    Margin="7,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding Title}" />
            </StackPanel>
            <!--  ////////////////  -->
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                WindowChrome.IsHitTestVisibleInChrome="True">
                <ui:IconHyperlink
                    Margin="0,0,7,0"
                    Text="GitHub"
                    ToolTip="https://github.com/CrazyZhang666/BF1MarneTools"
                    Uri="https://github.com/CrazyZhang666/BF1MarneTools" />
                <ui:WinButton
                    Command="{Binding OpenConfigFolderCommand}"
                    Icon="&#xE713;"
                    Style="{StaticResource WinButtonStyle_Normal}"
                    ToolTip="打开配置目录" />
                <!--  ////////  -->
                <Border
                    Width="1"
                    Margin="7"
                    Background="Gray" />
            </StackPanel>
        </DockPanel>
    </ui:EdgeWindow.CaptionContent>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <ui:IconHeader Title="战地1安装路径" />
            <DockPanel>
                <ui:IconButton
                    Margin="0,5,5,5"
                    VerticalAlignment="Center"
                    Command="{Binding SelcetBf1PathCommand}"
                    DockPanel.Dock="Right"
                    Icon="&#xE71E;"
                    IconSize="16"
                    ToolTip="选择BF1路径" />
                <ui:TextBoxHint
                    Hint="请选择战地1游戏安装目录 &quot;bf1.exe&quot; 文件路径"
                    Icon="&#xED25;"
                    IsReadOnly="True"
                    Text="{Binding LoadModel.Bf1Path}" />
            </DockPanel>
        </StackPanel>

        <DockPanel Grid.Row="1">
            <ui:IconHeader
                Title="工作模式"
                Margin="5"
                VerticalAlignment="Center" />
            <StackPanel
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <RadioButton
                    d:IsChecked="True"
                    Content="客户端模式"
                    GroupName="WorkMode"
                    IsChecked="{Binding Path=(root:Globals.IsUseServer), Converter={StaticResource InverseBooleanConverter}}" />
                <RadioButton
                    Content="服务端模式"
                    GroupName="WorkMode"
                    IsChecked="{Binding Path=(root:Globals.IsUseServer)}" />
            </StackPanel>
        </DockPanel>

        <TextBox
            x:Name="TextBox_Logger"
            Grid.Row="2"
            Margin="5,5,5,0"
            d:Text="等待玩家操作中..."
            Style="{StaticResource TextBoxStyle_Logger}" />

        <ui:IconButton
            Grid.Row="3"
            Padding="10"
            Command="{Binding LaunchMainAppCommand}"
            Content="启动主程序"
            Icon="&#xF0D6;">
            <ui:IconButton.Style>
                <Style BasedOn="{StaticResource IconButtonStyle_Base}" TargetType="{x:Type ui:IconButton}">
                    <Setter Property="IsEnabled" Value="False" />
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding LoadModel.IsInitSuccess}" Value="True" />
                                <Condition Binding="{Binding LoadModel.Bf1Path, Converter={StaticResource IsNullOrWhiteSpaceConverter}}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.Setters>
                                <Setter Property="IsEnabled" Value="True" />
                            </MultiDataTrigger.Setters>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </ui:IconButton.Style>
        </ui:IconButton>
    </Grid>

</ui:EdgeWindow>