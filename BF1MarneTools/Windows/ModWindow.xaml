<ui:EdgeWindow
    x:Class="BF1MarneTools.Windows.ModWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:BF1MarneTools.Resources"
    xmlns:root="clr-namespace:BF1MarneTools"
    xmlns:ui="http://wpf.microsoft.com/ui/2025/xaml"
    x:Name="Window_Mod"
    Title="{x:Static res:Lang.WindowTitle}"
    Width="650"
    Height="400"
    MinWidth="650"
    MinHeight="400"
    Closing="Window_Mod_Closing"
    ContentRendered="Window_Mod_ContentRendered"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Icon="{StaticResource DefaultIconPath}"
    Loaded="Window_Mod_Loaded"
    ResizeMode="NoResize"
    Style="{StaticResource EdgeWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel>
            <ui:IconHeader Title="{x:Static res:Lang.ModWin_InstallModList}" DockPanel.Dock="Top" />
            <ListBox
                x:Name="ListBox_ModInfos"
                dd:DragDrop.DropHandler="{Binding}"
                dd:DragDrop.IsDragSource="True"
                dd:DragDrop.IsDropTarget="True"
                dd:DragDrop.UseDefaultDragAdorner="True"
                ItemsSource="{Binding Bind_ModInfoList}">
                <dd:DragDrop.DropTargetAdornerPen>
                    <Pen
                        Brush="{StaticResource Win11Blue}"
                        DashCap="Round"
                        Thickness="2" />
                </dd:DragDrop.DropTargetAdornerPen>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Height="55"
                            Padding="5,0,5,0"
                            ToolTip="{Binding FullName}">
                            <DockPanel VerticalAlignment="Center">
                                <TextBlock
                                    Width="20"
                                    VerticalAlignment="Center"
                                    Text="{Binding Index}"
                                    TextAlignment="Center" />
                                <ui:IconFont
                                    Margin="5,0,10,0"
                                    VerticalAlignment="Center"
                                    FontSize="34"
                                    Icon="&#xEA86;" />
                                <StackPanel Margin="0,0,7,0">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Bold"
                                        Text="{Binding Name}" />
                                    <UniformGrid
                                        Margin="0,0,0,1"
                                        Columns="2"
                                        TextElement.FontSize="12">
                                        <DockPanel>
                                            <TextBlock Text="{x:Static res:Lang.ModWin_Size}" />
                                            <TextBlock Text="{Binding FileSize, StringFormat='{}: {0}'}" />
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Text="{x:Static res:Lang.ModWin_LastWriteTime}" />
                                            <TextBlock Text="{Binding ChangeTime, StringFormat='{}: {0}'}" />
                                        </DockPanel>
                                    </UniformGrid>
                                    <DockPanel>
                                        <TextBlock FontSize="11" Text="{x:Static res:Lang.ModWin_FilePath}" />
                                        <TextBlock
                                            FontSize="11"
                                            Text="{Binding FullName, StringFormat='{}: {0}'}"
                                            TextTrimming="CharacterEllipsis" />
                                    </DockPanel>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>

        <DockPanel Grid.Row="1">
            <ui:IconButton
                Margin="5,0,0,5"
                VerticalAlignment="Center"
                Command="{Binding SelcetModsPathCommand}"
                Content="{x:Static res:Lang.ModWin_SelectMods}"
                Icon="&#xE71E;" />
            <ui:IconButton
                Margin="5,0,5,5"
                Padding="7"
                Command="{Binding RunBF1ModGameCommand}"
                Content="{x:Static res:Lang.ModWin_InstallModAndRunBF1Game}"
                Icon="&#xE7FC;"
                IconSize="18"
                IsEnabled="{Binding ModModel.IsCanRunGame}" />
        </DockPanel>
    </Grid>

</ui:EdgeWindow>