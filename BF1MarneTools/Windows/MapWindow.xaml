<ui:EdgeWindow
    x:Class="BF1MarneTools.Windows.MapWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:local="clr-namespace:BF1MarneTools.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:BF1MarneTools.Resources"
    xmlns:root="clr-namespace:BF1MarneTools"
    xmlns:ui="http://wpf.microsoft.com/ui/2025/xaml"
    x:Name="Window_Map"
    Title="{x:Static res:Lang.WindowTitle}"
    Width="700"
    Height="800"
    MinWidth="700"
    MinHeight="800"
    Closing="Window_Map_Closing"
    ContentRendered="Window_Map_ContentRendered"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Icon="{StaticResource DefaultIconPath}"
    Loaded="Window_Map_Loaded"
    ResizeMode="NoResize"
    Style="{StaticResource EdgeWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <DockPanel>

        <!--  操作面板  -->
        <DockPanel DockPanel.Dock="Bottom">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <ui:IconButton
                    Margin="0,0,5,5"
                    Command="{Binding SaveMapListCommand}"
                    Content="{x:Static res:Lang.MapWin_SaveMapList}"
                    Icon="&#xE74E;" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <ui:IconButton
                    Margin="5,0,0,5"
                    Command="{Binding AddMapCommand}"
                    Content="{x:Static res:Lang.MapWin_AddMap}"
                    Icon="&#xE710;" />
                <ui:IconButton
                    Margin="5,0,0,5"
                    Command="{Binding DeleteMapCommand}"
                    Content="{x:Static res:Lang.MapWin_DeleteMap}"
                    Icon="&#xE711;" />
                <Border
                    Width="1"
                    Margin="10,5,10,10"
                    Background="Gray" />
                <!--  //////  -->
                <ui:IconButton
                    Margin="0,0,5,5"
                    Command="{Binding ClearMapListCommand}"
                    Content="{x:Static res:Lang.MapWin_ClearMapList}"
                    Icon="&#xE74D;" />
            </StackPanel>
        </DockPanel>

        <!--  地图面板  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="220" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--  游戏模式  -->
            <ListBox
                x:Name="ListBox_GameModeInfos"
                Grid.Column="0"
                Margin="5"
                ItemsSource="{Binding Bind_GameModeInfos}"
                SelectionChanged="ListBox_GameModeInfos_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Height="36" Padding="8,0,8,0">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,2"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Text="{Binding Name}" />
                                <TextBlock FontSize="10" Text="{Binding Code}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!--  地图列表  -->
            <ListBox
                x:Name="ListBox_GameMapInfos"
                Grid.Column="1"
                Margin="0,5,0,5"
                ItemsSource="{Binding Bind_GameMapInfos}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Height="36" ToolTip="{Binding Url}">
                            <DockPanel>
                                <!--  地图图片  -->
                                <Border Margin="1" DockPanel.Dock="Left">
                                    <Grid>
                                        <ui:Image Source="{Binding Image}" Stretch="Uniform" />
                                        <TextBlock
                                            Margin="2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            FontSize="8"
                                            Foreground="#FFFFFF"
                                            Text="{Binding Index, StringFormat='{}{0:00}'}" />
                                    </Grid>
                                </Border>
                                <!--  地图DLC类型  -->
                                <Border
                                    Margin="5,0,10,0"
                                    VerticalAlignment="Center"
                                    Background="#606266"
                                    CornerRadius="3"
                                    DockPanel.Dock="Right">
                                    <TextBlock
                                        Padding="5,3"
                                        FontSize="10"
                                        Foreground="#FFFFFF"
                                        Text="{Binding DLC}" />
                                </Border>
                                <!--  地图名称  -->
                                <StackPanel
                                    Margin="7,0,5,0"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left">
                                    <TextBlock
                                        Margin="0,0,0,2"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Text="{Binding Name}" />
                                    <TextBlock FontSize="10" Text="{Binding Code}" />
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!--  选择的地图列表  -->
            <ListBox
                x:Name="ListBox_GameMapModeInfos"
                Grid.Column="2"
                Margin="5"
                dd:DragDrop.DropHandler="{Binding}"
                dd:DragDrop.IsDragSource="True"
                dd:DragDrop.IsDropTarget="True"
                dd:DragDrop.UseDefaultDragAdorner="True"
                ItemsSource="{Binding Bind_GameMapModeInfos}">
                <dd:DragDrop.DropTargetAdornerPen>
                    <Pen
                        Brush="{StaticResource Win11Blue}"
                        DashCap="Round"
                        Thickness="2" />
                </dd:DragDrop.DropTargetAdornerPen>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Height="36" ToolTip="{Binding Url}">
                            <DockPanel>
                                <!--  地图图片  -->
                                <Border Margin="1" DockPanel.Dock="Left">
                                    <Grid>
                                        <ui:Image Source="{Binding Image}" Stretch="Uniform" />
                                        <TextBlock
                                            Margin="2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            FontSize="8"
                                            Foreground="#FFFFFF"
                                            Text="{Binding Index, StringFormat='{}{0:00}'}" />
                                    </Grid>
                                </Border>
                                <!--  地图DLC类型  -->
                                <Border
                                    Margin="5,0,10,0"
                                    VerticalAlignment="Center"
                                    Background="#606266"
                                    CornerRadius="3"
                                    DockPanel.Dock="Right">
                                    <TextBlock
                                        Padding="5,3"
                                        FontSize="10"
                                        Foreground="#FFFFFF"
                                        Text="{Binding DLC}" />
                                </Border>
                                <!--  地图名称  -->
                                <StackPanel
                                    Width="95"
                                    Margin="7,0,5,0"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left">
                                    <TextBlock
                                        Margin="0,0,0,2"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Text="{Binding Name}" />
                                    <TextBlock FontSize="10" Text="{Binding Code}" />
                                </StackPanel>
                                <!--  //////  -->
                                <Border
                                    Width="1"
                                    Margin="5,8,5,8"
                                    Background="Gray" />
                                <!--  //////  -->
                                <!--  地图模式  -->
                                <StackPanel
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left">
                                    <TextBlock
                                        Margin="0,0,0,2"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Text="{Binding ModName}" />
                                    <TextBlock FontSize="10" Text="{Binding ModCode}" />
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

    </DockPanel>

</ui:EdgeWindow>