<ui:EdgeWindow
    x:Class="BF1MarneTools.Windows.DialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="clr-namespace:BF1MarneTools"
    xmlns:ui="http://wpf.microsoft.com/ui/2026/xaml"
    Title="战地1马恩工具箱"
    Width="400"
    Height="225"
    MinWidth="400"
    MinHeight="225"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Icon="{StaticResource DefaultIconPath}"
    ResizeMode="NoResize"
    Style="{StaticResource EdgeWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="10">
            <TextBlock
                d:Text="标题"
                DockPanel.Dock="Top"
                FontSize="20"
                FontWeight="Bold"
                Text="{Binding Caption}" />
            <TextBlock
                Margin="0,10,0,10"
                d:Text="内容"
                FontSize="12"
                Text="{Binding MessageBoxText}"
                TextWrapping="WrapWithOverflow" />
        </DockPanel>

        <Grid Grid.Row="1">
            <StackPanel x:Name="StackPanel_NoOwnerDialog" Visibility="Collapsed">
                <ui:IconButton
                    Margin="0,0,5,5"
                    Command="{Binding EnterCommand}"
                    Content="确定"
                    Icon="&#xF78C;" />
            </StackPanel>
            <!--  ////////  -->
            <StackPanel
                x:Name="StackPanel_HaveOwnerDialog"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Visibility="Collapsed">
                <ui:IconButton
                    Margin="0,0,5,5"
                    Command="{Binding EnterCommand}"
                    Content="确定"
                    Icon="&#xF78C;" />
                <ui:IconButton
                    Margin="0,0,5,5"
                    Command="{Binding CancelCommand}"
                    Content="取消"
                    Icon="&#xF78A;" />
            </StackPanel>
        </Grid>

    </Grid>

</ui:EdgeWindow>