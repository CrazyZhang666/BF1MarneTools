<ui:EdgeWindow
    x:Class="BF1MarneTools.Windows.AccountWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:BF1MarneTools.Resources"
    xmlns:root="clr-namespace:BF1MarneTools"
    xmlns:ui="http://wpf.microsoft.com/ui/2025/xaml"
    x:Name="Window_Account"
    Title="{x:Static res:Lang.WindowTitle}"
    Width="500"
    Height="280"
    MinWidth="500"
    MinHeight="280"
    Closing="Window_Account_Closing"
    ContentRendered="Window_Account_ContentRendered"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Icon="{StaticResource DefaultIconPath}"
    Loaded="Window_Account_Loaded"
    ResizeMode="NoResize"
    Style="{StaticResource EdgeWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <ui:IconHeader Title="{x:Static res:Lang.AccountWin_Email}" Margin="5,5,5,0" />
            <ui:TextBoxHint
                x:Name="TextBoxHint_Email"
                Hint="{x:Static res:Lang.AccountWin_EmailHint}"
                Icon="&#xE715;" />

            <ui:IconHeader Title="{x:Static res:Lang.AccountWin_Password}" Margin="5,0,5,0" />
            <ui:TextBoxHint
                x:Name="TextBoxHint_Password"
                Hint="{x:Static res:Lang.AccountWin_PasswordHint}"
                Icon="&#xE8D7;" />

            <TextBlock
                Margin="7,5,7,5"
                Foreground="{StaticResource TextSecondColor}"
                Text="{x:Static res:Lang.AccountWin_Note}"
                TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <ui:IconButton
                Margin="0,5,5,5"
                Command="{Binding EnterAccountCommand}"
                Content="{x:Static res:Lang.AccountWin_EnterAccount}"
                Icon="&#xF78C;" />
        </StackPanel>
    </Grid>

</ui:EdgeWindow>