<ui:EdgeWindow
    x:Class="BF1MarneTools.Windows.LocaleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:BF1MarneTools.Resources"
    xmlns:root="clr-namespace:BF1MarneTools"
    xmlns:ui="http://wpf.microsoft.com/ui/2025/xaml"
    x:Name="Window_Locale"
    Title="{x:Static res:Lang.WindowTitle}"
    Width="500"
    Height="260"
    MinWidth="500"
    MinHeight="260"
    Closing="Window_Locale_Closing"
    ContentRendered="Window_Locale_ContentRendered"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Icon="{StaticResource DefaultIconPath}"
    Loaded="Window_Locale_Loaded"
    ResizeMode="NoResize"
    Style="{StaticResource EdgeWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Margin="5">
            <ui:IconHeader Title="{x:Static res:Lang.LocaleWin_BF1Language}" Margin="5,0,5,0" />
            <!--  ////////  -->
            <Separator Margin="5" />
            <!--  ////////  -->
            <UniformGrid x:Name="UniformGrid_Language" Columns="3">
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_English}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/en_US.png"
                    Tag="en_US" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_French}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/fr_FR.png"
                    Tag="fr_FR" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_German}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/de_DE.png"
                    Tag="de_DE" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_SpanishSpain}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/es_ES.png"
                    Tag="es_ES" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_Italian}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/it_IT.png"
                    Tag="it_IT" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_Russian}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/ru_RU.png"
                    Tag="ru_RU" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_Polish}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/pl_PL.png"
                    Tag="pl_PL" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_Japanese}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/ja_JP.png"
                    Tag="ja_JP" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_TChinese}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/zh_TW.png"
                    Tag="zh_TW" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_PortugueseBrazil}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/pt_BR.png"
                    Tag="pt_BR" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_SpanishMexico}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/es_MX.png"
                    Tag="es_MX" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_Arabic}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/ar_SA.png"
                    Tag="ar_SA" />
                <ui:ImageRadioButton
                    Margin="5"
                    Content="{x:Static res:Lang.LocaleWin_Turkish}"
                    GroupName="Language"
                    Source="pack://application:,,,/BF1MarneTools;component/Assets/Images/Regions/tr_TR.png"
                    Tag="tr_TR" />
            </UniformGrid>
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <ui:IconButton
                Margin="0,5,5,5"
                Command="{Binding ChangeGameLocaleCommand}"
                Content="{x:Static res:Lang.LocaleWin_ChangeLanguage}"
                Icon="&#xF78C;" />
        </StackPanel>
    </Grid>

</ui:EdgeWindow>