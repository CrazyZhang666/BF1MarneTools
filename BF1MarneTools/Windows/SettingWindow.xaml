<ui:EdgeWindow
    x:Class="BF1MarneTools.Windows.SettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BF1MarneTools.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:BF1MarneTools.Resources"
    xmlns:root="clr-namespace:BF1MarneTools"
    xmlns:ui="http://wpf.microsoft.com/ui/2025/xaml"
    x:Name="Window_Setting"
    Title="{x:Static res:Lang.WindowTitle}"
    Width="600"
    Height="650"
    MinWidth="600"
    MinHeight="650"
    Closing="Window_Setting_Closing"
    ContentRendered="Window_Setting_ContentRendered"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Icon="{StaticResource DefaultIconPath}"
    Loaded="Window_Setting_Loaded"
    ResizeMode="NoResize"
    Style="{StaticResource EdgeWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox
            x:Name="TextBox_ServerSettings"
            Grid.Row="0"
            Margin="5"
            Style="{StaticResource TextBoxStyle_Editor}" />

        <DockPanel Grid.Row="1">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <ui:IconButton
                    Margin="0,0,5,5"
                    Command="{Binding ReadSettingFileCommand}"
                    Content="{x:Static res:Lang.SettingWin_ReadSetting}"
                    Icon="&#xE8E5;" />
                <ui:IconButton
                    Margin="0,0,5,5"
                    Command="{Binding SaveSettingFileCommand}"
                    Content="{x:Static res:Lang.SettingWin_SaveSetting}"
                    Icon="&#xE74E;" />
            </StackPanel>
            <!--  ////////////  -->
            <StackPanel Orientation="Horizontal">
                <ui:IconButton
                    Margin="5,0,0,5"
                    Command="{Binding UseDefaultSettingCommand}"
                    Content="{x:Static res:Lang.SettingWin_UseDefaultSetting}"
                    Icon="&#xE734;" />
            </StackPanel>
        </DockPanel>
    </Grid>

</ui:EdgeWindow>