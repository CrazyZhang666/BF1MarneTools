<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ModernWPF.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ModernWPF;component/Styles/Base.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  系统窗口按钮样式  -->
    <Style x:Key="WinButtonBaseStyle" TargetType="{x:Type controls:WinButton}">
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Width" Value="46" />
        <Setter Property="Height" Value="32" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Foreground" Value="{StaticResource WinButton_Foreground}" />
        <Setter Property="OverForeground" Value="{StaticResource WinButton_OverForeground}" />
        <Setter Property="OverBackground" Value="{StaticResource WinButton_OverBackground}" />
        <Setter Property="PressedForeground" Value="{StaticResource WinButton_PressedForeground}" />
        <Setter Property="PressedBackground" Value="{StaticResource WinButton_PressedBackground}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:WinButton}">
                    <Border
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        Background="Transparent">
                        <Grid>
                            <Border x:Name="BackBorder" Background="Transparent" />
                            <controls:IconFont
                                x:Name="IconFont"
                                FontSize="{TemplateBinding FontSize}"
                                Foreground="{TemplateBinding Foreground}"
                                Icon="{TemplateBinding Icon}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="IconFont" Property="Foreground" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=OverForeground}" />
                            <Setter TargetName="BackBorder" Property="Background" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=OverBackground}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="IconFont" Property="Foreground" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=PressedForeground}" />
                            <Setter TargetName="BackBorder" Property="Background" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=PressedBackground}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  全局样式  -->
    <Style BasedOn="{StaticResource WinButtonBaseStyle}" TargetType="{x:Type controls:WinButton}" />

    <!--  关闭按钮样式  -->
    <Style
        x:Key="WinButtonStyle_Close"
        BasedOn="{StaticResource WinButtonBaseStyle}"
        TargetType="{x:Type controls:WinButton}">
        <Setter Property="Foreground" Value="{StaticResource WinButton_Close_Foreground}" />
        <Setter Property="OverForeground" Value="{StaticResource WinButton_Close_OverForeground}" />
        <Setter Property="OverBackground" Value="{StaticResource WinButton_Close_OverBackground}" />
        <Setter Property="PressedForeground" Value="{StaticResource WinButton_Close_PressedForeground}" />
        <Setter Property="PressedBackground" Value="{StaticResource WinButton_Close_PressedBackground}" />
    </Style>

    <!--  普通样式  -->
    <Style
        x:Key="WinButtonStyle_Normal"
        BasedOn="{StaticResource WinButtonBaseStyle}"
        TargetType="{x:Type controls:WinButton}">
        <Setter Property="Width" Value="34" />
        <Setter Property="Height" Value="32" />
        <Setter Property="FontSize" Value="14" />
    </Style>

</ResourceDictionary>